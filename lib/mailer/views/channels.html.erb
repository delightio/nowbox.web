<repeater>
	<% if @user %>
		<layout label="User">
			<table width="100%" cellpadding="0" cellspacing="0" border="0">
			<tr>
				<td bgcolor="#F95133" nowrap width="5"><img border="0" src="images/spacer.gif" width="5" height="1"></td>
				<td width="100%" bgcolor="#F4F4ED">
			
					<table width="100%" cellpadding="20" cellspacing="0" border="0">
					<tr>
						<td bgcolor="#F4F4ED" class="contentblock">

							<div class="h2 secondary" style="color:#F95133; font-size:20px; font-weight: bold;"><strong><singleline label="Title">Hello <%= @user.first_name %>!</singleline></strong></div>
							<multiline label="Description">
								<p style="font-size: 18px; line-height: 1.5; ">We know there's a lot to look at on nowmov, so we've been searching high and low for a few videos we think you'd really like.  Here's what we came up with.</p>
								<p><i>- the nowmov team</i></p>
							</multiline>

						</td>
					</tr>
					</table>
			
				</td>
			</tr>
			</table>  
	</layout>	
	<% end %>
	
	<% if @channels %>
	<layout  label="Channels">
		<table id="channels" width="100%" cellpadding="0" cellspacing="0" border="0">
			<tr>
				<td width="100%" bgcolor=""  cellpadding="0"  cellspacing="0" class="contentblock hide">
							<div class="h1 secondary" style="color:#222222 !important;font-size:22px; margin: 30px 0px 20px 5px;"><singleline label="Section Title">What's On</singleline></div>
				</td>
			</tr>
			<tr >
				<td width="100%">
				<% @channels.each do |channel| %>
					<table class="channel"bgcolor="#FFFFFF" width="100%" cellpadding="5" cellspacing="0" border="0" style="">
						<tr  bgcolor="#F4F4ED" >
							<td>
								<img src="<%= channel.thumbnail_uri %>" width="50" height="50" class="galleryimage" label="<%= channel.title %>">
							</td>
							<td  class="contentblock">
								<div class="h2" style="color:#F95133; font-size:18px; font-weight: bold;"><%= "#{channel.title}" %></div>
							</td>
							<td></td>
						</tr>
						<tr class="browseronly">
							<td></td>
							<td></td>
							<td></td>
						</tr>	
						<% channel.videos.each do |video| %>										
							<tr>
								<td width="50">

								</td>
								<td class="contentblock">
									<div class="h3 secondary"><singleline label="Title">
										<a href="http://beta.<%= Aji.conf['TLD'] %>/video/<%= video.id %>" target="_blank" class="ellipsis" style="color: #4A7698; width: 430px; display: block;"><%= video.title %></a>
										</singleline>
									</div>
								</td>
								<td class="imageblock" width="85">
									<a href="http://beta.<%= Aji.conf['TLD'] %>/video/<%= video.id %>" target="_blank">
										<img src="<%= video.thumbnail_uri %>" width="75" style="vertical-align: middle;"/>
									</a>
								</td>	
							</tr>
						<% end %>		
						<tr class="browseronly">
							<td></td>
							<td></td>
							<td></td>
						</tr>						
					</table>
					<img class="browseronly" border="0" src="http://beta.<%= Aji.conf['TLD'] %>:5000/images/email/spacer.gif" width="1" height="10"><br>
				<% end %>
				</td>
			</tr>
		</table>  		
	</layout>
	<% end %>

</repeater>      