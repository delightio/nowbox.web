<repeater>
	<% if @user %>
		<layout label="User">
			<table width="100%" cellpadding="0" cellspacing="0" border="0">
			<tr>
				<td bgcolor="#F95133" nowrap><img border="0" src="images/spacer.gif" width="5" height="1"></td>
				<td width="100%" bgcolor="#F4F4ED">
			
					<table width="100%" cellpadding="20" cellspacing="0" border="0">
					<tr>
						<td bgcolor="#F4F4ED" class="contentblock">

							<h2 class="secondary"><strong><singleline label="Title">Hello <%= @user.first_name %>!</singleline></strong></h2>
							<multiline label="Description">
								<p>We know there's a lot to look at on nowmov, so we've been searching high and low for a few videos we think you'd really like.  Here's what we came up with.</p>
								<p><i>- the nowmov team</i></p>
							</multiline>

						</td>
					</tr>
					</table>
			
				</td>
			</tr>
			</table>  
			<img border="0" src="images/spacer.gif" width="1" height="30" class="divider"><br>
			</layout>	
	<% end %>
	
	<%= erb :'_shares.html' %>
	<%= erb :'_recent_channels.html' %>


