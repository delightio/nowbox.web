<head>
		<title>NOWBOX | <%= @channel['title'] %></title>
		<%= erb :_layout_head %>

	  <meta property="title" content="<%= h @channel['title'] %>" />
	  <meta property="description" content="<%= h @channel['description'] %>" />
	  <link rel="image_src" href="<%= h @channel['thumbnail_uri'] %>" />

	  <meta property="og:url" content="http://<%= Aji.conf['TLD'] %>/channel/<%= @channel['id'] %>" />
	  <meta property="og:title" content="<%= h @channel['title'] %>" />
		<meta property="og:type" content="article" />
	  <meta property="og:description" content="<%= h @channel['description'] %>" />
	  <meta property="og:image" content="<%= h @channel['thumbnail_uri'] %>" />

	  <meta name="medium" content="channel" />

		<meta name="viewport" content="width=960">

</head>
<body id="channel_layout">
	<header>
		<%= erb :_header %>
	</header>
	<div id="channel_page" role="main">
		<%= yield %>
	</div>
	<%= erb :_layout_scripts %>
</body>
