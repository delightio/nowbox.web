<head>
		<title>nowmov | <%= @video.title %></title>
		<%= erb :_layout_head %>
		<meta name="viewport" content="width=device-width, initial-scale=0.375">		
		
	  <meta property="title" content="<%= @video.title %>" />
	  <meta property="description" content="<%= @video.description %>" />
	  <link rel="image_src" href="<%= "http://img.youtube.com/vi/#{@video.external_id}/0.jpg"%>" />
	  
	  <meta property="og:url" content="http://nowmov.com/<%= params[:share_id] %>" />
	  <meta property="og:title" content="<%= @video.title %>" />
		<meta property="og:type" content="article" />
	  <meta property="og:description" content="<%= @video.description %>" />
	  <meta property="og:image" content="<%= "http://img.youtube.com/vi/#{@video.external_id}/0.jpg"%>" />
	  
	  <meta name="medium" content="video" />		
		
</head>
<body id="video_layout">
	<header>
		<%= erb :_header %>
	</header>
	<div id="video_page" role="main">
		<%= yield %>
	</div>

	<%= erb :_layout_scripts %>	
</body>
</html>