<head>
  <title>NOWBOX | <%= @video.title %></title>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
  <title>nowbox</title>
  <meta name="description" content="Want to see the future of video entertainment? nowbox is launching soon, signup for an early invite.">
  <meta name="author" content="Nowbox">
  <link rel="shortcut icon" href="/favicon.ico">
  <link rel="apple-touch-icon" href="/apple-touch-icon.png">
  <link rel="stylesheet" href="css/style.css?v=2" type="text/css">
  <link rel="stylesheet" href="css/buttons.css?v=2" type="text/css">
  <link href="css/main.css?v=2" type="text/css" rel="stylesheet" >
  <link href='http://fonts.googleapis.com/css?family=Raleway:100&v2' rel='stylesheet' type='text/css'>
  <!-- <script src="//ajax.googleapis.com/ajax/libs/jquery/1.5.1/jquery.min.js"></script> -->
  <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.5.1/jquery.min.js"></script>
  <script src="/js/libs/modernizr-1.7.min.js"></script>
  <meta property="title" content="<%= @video.title %>" />
  <meta property="description" content="<%= @video.description %>" />
  <link rel="image_src" href="http:&#x2F;&#x2F;img.youtube.com&#x2F;vi&#x2F;<%= @video.external_id %>&#x2F;0.jpg" />
  <meta property="og:url" content="" />
  <meta property="og:title" content="<%= @video.title %>" />
  <meta property="og:type" content="article" />
  <meta property="og:description" content="<%= @video.description %>" />
  <meta property="og:image" content="http:&#x2F;&#x2F;img.youtube.com&#x2F;vi&#x2F;<%= @video.external_id %>&#x2F;0.jpg" />
  <meta name="medium" content="video" />
  <meta name="viewport" content="width=960">
</head>
<body id="video_layout">
  <div id="video_page" role="main">
    <div id="video">
      <div id="header" class="wrapper">
        <div class="image" style="display: none;">
          <a href="/download"><img src="/images/graphics/ipad-chrome-small.png" height="48px" /></a>
        </div>
        <div class="profile_pic">
          <img src="<%= nil_on_fail("/images/graphics/ipad_minimal.png") { @share.publisher.try(:thumbnail_uri) } %>">
        </div>
        <dl class="blurb">
          <dt>
            <%=  @share.publisher.realname %> shared this video using the <em>NOWBOX</em> iPad app! Join them!
          </dt>
          <dd>
            <%= @share.message %>
          </dd>
        </dl>
        <div class="app_store">
          <a href="/download">
            <img src="images/new/app_store_button.png">
          </a>
        </div>
        <div class="win_ipad">
          <a href="/giveaway">
            <img src="images/new/win_ipad_button.png">
          </a>
        </div>
        <div class="clearfix"></div>
      </div>
      <div id="embed">
        <iframe width="900" height="510" src="http://www.youtube.com/embed/<%= @video.external_id %>?rel=0&hd=1&modestbranding=1&autohide=1&showinfo=0&fs=1&autoplay=1" frameborder="0" allowfullscreen></iframe>
      </div>
      <div id="info" class="wrapper">
        <div class="logo">
          <a href="/">
            <img src="images/new/logo_small.png">
          </a>
        </div>
        <div id="video_info">
          <div class="wrap">
            <div class="title">
              <%= @video.title %>
            </div>
            <div class="description truncateme">
              <%= @video.description %>
            </div>
          </div>
        </div>
        <div id="share_button">
          <a href="#" onClick="$(this).hide(); $('#share_buttons').show();">
            <img src="images/new/share_button.png">
          </a>
          <div id="share_buttons">
            <div class="fblike">
              <iframe src="http://www.facebook.com/plugins/like.php?app_id=196334653750817&amp;href=http:&#x2F;&#x2F;nowbox.com&#x2F;shares&#x2F;<%= @share.id %>&amp;send=false&amp;layout=box_count&amp;width=90&amp;show_faces=false&amp;action=like&amp;colorscheme=light&amp;font&amp;height=80" scrolling="no" frameborder="0" style="border:none; overflow:hidden; width:60px; height:70px;" allowTransparency="true"></iframe>
            </div>
            <div class="plusone" style="width: 60px; height: 70px;">
              <g:plusone size="tall" href="/shares/<%= @share.id %>"></g:plusone>
            </div>
            <div class="tweet">
              <iframe allowtransparency="true" frameborder="0" scrolling="no" src="http://platform.twitter.com/widgets/tweet_button.html?url=http:&#x2F;&#x2F;nowbox.com&#x2F;shares&#x2F;<%= @share.id %>&count=vertical&via=nowbox&related=nowbox:Your Personalized TV Guide&text=Watch this video! &#x27;<%= @video.title %>&#x27;" style="width:60px; height:70px;"></iframe>
            </div>
            <div class="close">
              <a href="#" onClick="$('#share_buttons').hide(); $('#share_button > a').show();">
                x
              </a>
            </div>
            <div class="clearfix"></div>
          </div>
        </div>
        <div id="shuffle_button">
          <a href="#">
            <img src="images/new/shuffle_button.png">
          </a>
        </div>
        <div class="clearfix"></div>
      </div>
      <div class="wrapper" style="display: none;">
        <div class="appstore">
          <a href="/download" class="opacity_transition">
            <img src="/images/graphics/appstore-gray.png" height="80px"/>
          </a>
        </div>
      </div>
    </div>
  </div>
</div>
