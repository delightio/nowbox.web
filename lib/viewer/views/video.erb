<div class="divider orange-tile"></div>
<div id="video">
	<div class="wrapper">
		<%= erb :_call_to_action_social %>
	</div>	
	
	
	<% if @share.message && false %>
	<div id="sharer" class="wrapper">
		<div class="message">
			<span class="quotes">&#8220;</span><%= @share.message %><span class="quotes">&#8221;</span><span class="message_sharer"> - <%= @user.first_name %></span>
		</div>	
	</div>
	<% end %>
	
  <div id="embed">
  	<% if @video.source == :youtube %>
			<iframe width="900" height="510" src="http://www.youtube.com/embed/<%= @video.external_id %>?rel=0&hd=1&modestbranding=1&autohide=1&showinfo=0&fs=1&autoplay=1" frameborder="0" allowfullscreen></iframe>
		<% end %>
  </div>
 
	<div id="info" class="wrapper">
		<div id="video_info">
			<div class="title"><%= @video.title %></div>
			<div class="description truncateme"><%= @video.description %></div>		
		</div>
		
		<div id="share_button">
			<button onclick="$(this).hide(); $('#share_buttons').show();" class="minimal">Share</button>
		</div>
		<div id="share_buttons">
			<div class="fblike">
				<iframe src="http://www.facebook.com/plugins/like.php?app_id=196334653750817&amp;href=http%3A%2F%2Fnowmov.com/<%= @share.id%>&amp;send=false&amp;layout=box_count&amp;width=90&amp;show_faces=false&amp;action=like&amp;colorscheme=light&amp;font&amp;height=80" scrolling="no" frameborder="0" style="border:none; overflow:hidden; width:60px; height:70px;" allowTransparency="true"></iframe>				
			</div>
			<div class="plusone" style="width: 60px; height: 70px;">
				<g:plusone size="tall" href="http://nowmov.com/<%= @share.id %>"></g:plusone>
			</div>
			<div class="tweet">
				<iframe allowtransparency="true" frameborder="0" scrolling="no" src="http://platform.twitter.com/widgets/tweet_button.html?url=http://nowmov.com/<%= @share.id %>&count=vertical&via=nowmov&related=fahdoo:Nowmov UX Engineer&text=<%= "Watch this video now! '" + @video.title + "'" %>" style="width:60px; height:70px;"></iframe>
			</div>
		</div>

		<div class="clearfix"></div>
	</div>

	<div class="wrapper" style="display: none;">
		<%= erb :_appstore %>
	</div>	
	
	<% if @user_shares.count > 0 %>
	<ul id="user_videos" class="wrapper">
		<h2>Suggested videos</h2>
		<div id="next_button">
			<a href="/random" class="opacity_transition">
				<img src="/images/graphics/aji-icons_shuffle.png" width="50px">
			</a>
		</div>	
		<% @user_shares.each do |user_share| %>
			<li>
				<a href="/<%= user_share.id %>">
					<div class="image">
						<div class="inset_shadow"></div>
						<img src="<%= user_share.video.thumbnail_uri %>" />
						<div class="viewcount round-corners-3"><%= user_share.video.view_count %> views</div>
					</div>
					<div class="title"><%= user_share.video.title %></div>
				</a>
			</li>
		<% end %>
		<div class="clearfix"></div>
	</ul>		
	<% end %>
	

	<div class="wrapper">
		<a id="logo" href="./">
			<img src="./images/logos/nowmov-logotype-orange.png" height="30px"/>
		</a>
	</div>		
</div>